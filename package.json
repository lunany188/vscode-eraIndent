{
  "name": "eraindent",
  "displayName": "eraIndent",
  "description": "Indent formatter for EraBasic",
  "version": "0.4.0",
  "publisher": "lunany188",
  "license": "CC0-1.0",
  "homepage": "https://github.com/lunany188/eraIndent/blob/master/README.md",
  "bugs": {
    "url": "https://github.com/lunany188/eraIndent/issues",
    "email": "lunany188@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lunany188/eraIndent.git"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "erabasic"
  ],
  "activationEvents": [
    "onLanguage:erabasic"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "vscode:prepublish": "npm run lint && npm run clean && npm run esbuild-base -- --minify",
    "compile": "npm run clean && npm run compile:esbuild",
    "compile:esbuild": "npm run esbuild-base -- --sourcemap",
    "compile:ts": "tsc -p ./",
    "watch": "npm run clean && tsc -watch -p ./",
    "lint:ts": "tsc -p ./ --noEmit",
    "lint:prettier": "prettier --write ./src",
    "lint:eslint": "eslint --fix ./src",
    "lint": "npm run lint:ts && npm run lint:eslint && npm run lint:prettier",
    "clean": "rimraf out"
  },
  "extensionDependencies": [
    "sasami.erabasic"
  ],
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@types/vscode": "^1.30.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "esbuild": "^0.14.10",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "contributes": {
    "configuration": {
      "title": "eraindent",
      "properties": {
        "eraindent.indentCommentRow": {
          "default": false,
          "type": "boolean",
          "description": "%configuration.indentCommentRow.description%"
        },
        "eraindent.indentInsideOfFunction": {
          "default": false,
          "type": "boolean",
          "description": "%configuration.indentInsideOfFunction.description%"
        }
      }
    }
  }
}
